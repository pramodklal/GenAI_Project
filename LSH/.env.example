# MCP Server Configuration
MCP_MEAL_ORDER_PORT=8001
MCP_FOOD_PRODUCTION_PORT=8002
MCP_EVS_TASK_PORT=8003

# Agent Configuration
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT_SECONDS=30
