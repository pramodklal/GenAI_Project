AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# Microsoft Foundry Configuration (formerly Azure AI Foundry)
FOUNDRY_PROJECT_ENDPOINT=https://your-project.api.azureml.ms
FOUNDRY_MODEL_DEPLOYMENT=gpt-4o

# GitHub Models Configuration (for development)
GITHUB_TOKEN=your_github_token
GITHUB_MODEL_ENDPOINT=https://models.inference.ai.azure.com

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/healthcare_digital
